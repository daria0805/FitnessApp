{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            width: 80%;
            margin: auto;
            text-align: center;
        }

        .form-container h1 {
            font-size: 3rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .form-container input {
            display: block;
            width: 60%;
            height: 2rem;
            margin: 1rem auto;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1.2rem;
            outline: none;
        }

        .form-container button {
            display: block;
            width: 40%;
            margin: 2rem auto;
            padding: 0.5rem;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .form-container button:hover {
            background-color: #0056b3;
        }

        .form-container p {
            margin-top: 1rem;
        }

        .form-container a {
            color: #007bff;
            text-decoration: none;
        }
        .container-form{
              margin: 50px auto;
                max-width: 800px;
                padding: 20px;
                text-align: center;
                    background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
<div class="container-form">
<div class="form-container">
           <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
    
            {# <input 
                type="email" 
                value="{{ last_username }}" 
                name="email" 
                id="inputEmail" 
                class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none" 
                placeholder="Email"
                autocomplete="email" 
                required 
                autofocus
            > #}
            <input
                type="email"
                value="{{ last_username }}"
                name="email"
                class="form-control"
                id="inputEmail"
                placeholder="Email address"
                autocomplete="email"
                required
                autofocus
            >

            {# <input 
                type="password" 
                name="password" 
                id="inputPassword" 
                class="bg-transparent block mt-10 mx-auto border-b-2 w-1/5 h-20 text-2xl outline-none" 
                autocomplete="current-password" 
                placeholder="Password"
                required
            > #}
            <input
                type="password"
                name="password"
                id="inputPassword"
                 class="form-control"
                placeholder="Password"
                required
            >

            <input 
                type="hidden" 
                name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {# <button 
                class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/5 mt-10 font-extrabold py-4 px-8 rounded-3xl" 
                type="submit">
                Sign in
            </button> #}
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <p>Don't have an account?</p>
            <button onclick="window.location.href = '/register';">Register here!</button>
        </form>
        </div>
</div>
{% endblock %}
