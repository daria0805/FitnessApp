{% extends 'base.html.twig' %}

{% block body %}
<style/>
    .title {
        font-size: 24px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .summary {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .section-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .container-plan {
  margin: 50px auto;
  max-width: 800px;
  padding: 20px;
  text-align: center;
    background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

</style>
<div class="container-plan">
<h1 class="title">Calculate Diet Plan</h1>

<form method="POST" action="{{ path('calculate_diet_plan') }}">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.weight) }}
        </div>
         <button type="submit" name="calories" {% if totalCalorieIntake is defined %}disabled{% endif %} class="btn btn-primary">
            {% if totalCalorieIntake is defined %}Edit{% else %}Calculate{% endif %}
        </button>
    {{ form_end(form) }}
</form>

{% if totalCalorieIntake is defined %}
<div class="summary">
    <h2>Total Calories: {{ totalCalorieIntake }}</h2>
    <h3>Breakfast Calories: {{ breakfastCalories }}</h3>
    <h3>Lunch Calories: {{ lunchCalories }}</h3>
    <h3>Dinner Calories: {{ dinnerCalories }}</h3>
          <a href="{{ path('app_meal_plan') }}" class="btn btn-primary">Go to Plan</a>
          </div>
{% endif %}
</div>
{% endblock %}