{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <style>
        .form-container {
            width: 80%;
            margin: auto;
            text-align: center;
        }

        .form-container h1 {
            font-size: 3rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .form-container input {
            display: block;
            width: 60%;
            height: 2rem;
            margin: 1rem auto;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1.2rem;
            outline: none;
        }
        .form-container label {
            display: inline-block;
            margin-left: 0.5rem;
        }
        .form-container input[type="submit"] {
            display: block;
            width: 40%;
            margin: 2rem auto;
            padding: 0.5rem;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .form-container input[type="submit"]:hover {
            background-color: #0056b3;
        }

        .form-container p {
            margin-top: 1rem;
        }

        .form-container a {
            color: #007bff;
            text-decoration: none;
        }


        .form-container button {
            display: block;
            width: 40%;
            margin: 2rem auto;
            padding: 0.5rem;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            font-size: 1.2rem;
            cursor: pointer;
        }

        .form-container button:hover {
            background-color: #0056b3;
        }

        .form-container p {
            margin-top: 1rem;
        }

        .form-container a {
            color: #007bff;
            text-decoration: none;
        }
        .form-container input[type="checkbox"] {
            display: inline-block;
            width: auto;
            margin-top: 1rem;
        }

        .container-form{
              margin: 50px auto;
                max-width: 800px;
                padding: 20px;
                text-align: center;
                    background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}
{% block body %}
<div class="container-form">
<div class="form-container">
            <h1 class="text-6xl pt-12 pb-8">
                Register
            </h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}
             <button 
                type="submit">
                Register
            </button>
             <p>Already have an account?</p>
            <button onclick="window.location.href = '/login';">Login here!</button>
            {{ form_end(registrationForm) }}

        </div>
    </div>

{% endblock %}